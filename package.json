{
  "name": "cursor-rules-mdc",
  "version": "1.1.1",
  "description": "Base universelle réutilisable pour tous langages avec règles Cursor MDC et outils de qualité automatique (ESLint/Prettier universels)",
  "private": true,
  "type": "module",
  "keywords": [
    "cursor",
    "mdc",
    "universal-base",
    "project-template",
    "automatic-versioning",
    "code-quality"
  ],
  "homepage": "https://github.com/ShakaTry/cursor-rules-mdc#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShakaTry/cursor-rules-mdc.git"
  },
  "bugs": {
    "url": "https://github.com/ShakaTry/cursor-rules-mdc/issues"
  },
  "license": "MIT",
  "author": "ShakaTry",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "prepare": "git config core.hooksPath .githooks || true",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:dry": "release-it --dry-run",
    "release": "release-it",
    "commit": "git add . && git commit -F .gitmessage || git commit",
    "setup": "npm install && npm run prepare"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@release-it/conventional-changelog": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "prettier": "^3.0.0",
    "release-it": "^16.3.0"
  },
  "optionalDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "src/",
    "docs/",
    "templates/",
    "examples/",
    "*.md",
    "LICENSE"
  ]
}
